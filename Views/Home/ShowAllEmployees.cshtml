@{
}
@model IEnumerable<Employee>

<html xmlns="http://www.w3.org/1999/xhtml">
    <head><title>All Employees</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Exo+2:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/ShowAllEmployeeStyle.css" />
    </head>
    <body>
    <h2>All Employees Home</h2>
    <table class="table table-striped table-hover">
            <thead>
            <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Department</th>
            <th>Job Title</th>
            <th>Gender</th>
            <th>Birth Date</th>
            <th>Status</th>
            </tr>

            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Department</td>
                    <td>@item.JobTitle</td>
                    <td>@item.Gender</td>
                    <td>@item.BirthDate.ToString("yyyy-MM-dd")</td>
                    @if (@item.IsActive == false)
                    {
                        <td><span class="bg-danger" style="color:aliceblue ; text-align:center">Deleted</span></td>
                    }
                    else
                    {
                        <td><span class="bg-success" style="color:aliceblue; text-align:center">Available</span></td>
                    }


                </tr>
            }
            </tbody>
        </table>
    </body>
</html>
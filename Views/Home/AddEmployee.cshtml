@model Employee


<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Exo+2:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/css/HomeStyle.css">

    <title>Employee View</title>
    <style>
        .input-validation-error {
            border: 1px solid darkred ;
            background-color: #ffcccb;

        }
        .validation-summary-errors {
            color: red;
        }

     .form-control {
      width: 500px;
      box-sizing: border-box;
      height : 40px;
     }
     img {
         padding-top:100px;
     }

    </style>
</head>

<body>
      <div class = "imgDiv" style="display: flex; justify-content: space-around">

    <form asp-action="AddEmployee" method="post">
        

        <h1>New Employee</h1>

        <div asp-validation-summary="All"></div>



        <div class="form-group">
            <label asp-for="Name">Employee Name</label> <br />
            <input asp-for="Name" class="form-control form-control-sm" placeholder="name" />
        </div>
        <br />

        <div class="form-group">
            <label asp-for="Department"> Department </label> <br />
            <select asp-for="Department" class="form-control form-control-sm">
                <option></option>
                <option value="IS">IS</option>
                <option value="IT">IT</option>
                <option value="CS">CS</option>

            </select>
        </div>
        <br />
        <div class="form-check form-check-inline">
           <input type="checkbox" asp-for="IsActive" class="form-check-input" />

            <label asp-for="IsActive" class="form-check-label"> Is Active ? </label>
        </div>
        <br />
        <div class="form-group">
            <label asp-for="JobTitle"> Job Title </label><br />
            <input asp-for="JobTitle" class="form-control form-control-sm" placeholder="Job Title" />
        </div>
        <br />
        <div class="form-group">
            <label asp-for="Gender"> Gender </label> <br />
            <select asp-for="Gender" class="form-control form-control-sm">
                <option></option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
        </div>
        <br />
        <div class="form-group">
            <label asp-for="BirthDate"> Birth Date </label> <br />
            <input type="date" asp-for="BirthDate" class="form-control form-control-sm" />
        </div>
        <br />
        <div class="form-group">
            <label asp-for="Email"> Email  </label> <br />
            <input type="email" asp-for="Email" class="form-control form-control-sm" placeholder="Email" />
        </div>
        <br />
        <div class="form-group">
        <button type="submit" class="btn btn-primary" style = "background-color: #0d6efdbd ; border-color:#0d6efdbd">Save</button> 
        </div>
        <br />
    </form>
        <img src="~/images/social-media_15251593.png" height="30%"/>
   </div>

</body>
</html>


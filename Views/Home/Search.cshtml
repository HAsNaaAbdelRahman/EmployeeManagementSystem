@{
}
@model IEnumerable<Employee>

<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
		<title></title>
	<link rel="stylesheet" href="~/css/SearchStyle.css">
</head>
    <body>
    <div class="text-center">
        <h1 class="display-4">Search</h1>
        <br />
        <img src="~/images/employee-management-icon-editable-vector.jpg" width="10%" />

    <br />
    <br />
    <br />
    <div class="search text-center">


            <form asp-controller="Home" asp-action="Search" method="get">
                <input type="text" placeholder="Search by Id" name="id" class="borderc" />
                <button class="btn btn-primary" type="submit">Search</button>
            </form>
    </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Department</th>
                    <th>Job Title</th>
                    <th>Gender</th>
                    <th>Birth Date</th>
                    <th>Status</th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>@item.Department</td>
                        <td>@item.JobTitle</td>
                        <td>@item.Gender</td>
                        <td>@item.BirthDate.ToString("yyyy-MM-dd")</td>
                        @if (@item.IsActive == false)
                        {
                            <td><span class="bg-danger" style="color:aliceblue ; text-align:center">Deleted</span></td>
                        }
                        else
                        {
                            <td><span class="bg-success" style="color:aliceblue; text-align:center">Available</span></td>
                        }

                    </tr>
                }
            </tbody>
        </table>
    </div>

    </body>

</html>